<html>

<head>
	<title>MyOdyssey</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/myodyssey.js"></script>
	<!--- TODO IMPORTANT!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! TODO -->
	<!--- !!!!!!!! DO N O T PUSH TO GITHUB WITHOUT REMOVING API KEY !!!!!!! -->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAytjQZntUfx9YwSeB_Yi_p8U9mz0tePC4&callback=initMap&libraries=places" async defer></script>

	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/myodyssey.css" rel="stylesheet">

</head>

<body>
	<div class="container-fluid">
		<div id="map"></div>

		<div class="topbox row">

			<div class="col" id="welcome">
				{{#if username}}

					<div id="welcomeText">
						<h1>Welcome back, <br>
							<div id="userName">{{username}}</div>
						</h1>
						<p>Tap a marker to view the note.</p>
					</div>

					{{#unless viewAlt}}
						<button type="button" class="collapsible btn btn-primary btn-block" data-toggle="collapse" data-target="#note-form">Add Note</button><br>
					{{/unless}}

					<div id="note-form" class="collapse">
						<div class="form-group">
							<input id="address" type="text" class="form-control" placeholder="La Jolla Cove">
						</div>
						<div class="form-group">
							<input id="note" type="textbox" class="form-control" placeholder="Type a note here">
						</div>
						<input id="submitNote" type="submit" class="btn btn-primary" value="Submit">
					</div>

				{{/if}}
			</div>

			<div id="login">
				{{#unless username}}
					<form id="loginForm" role="form">
						<div class="form-group">
							<input name="name" id="name" type="text" class="form-control" placeholder="What's your Name?">
						</div>
						<div class="form-group">
							<input id="loginBtn" type="submit" class="btn btn-primary" value="Enter MyOdyssey!" method="get" action="/">
						</div>
					</form>
				{{/unless}}
			</div>
		</div> <!-- topbox end -->

		{{#if viewAlt}}
		{{#if username}}
			<div id="altAdd">
				<button type="button" class="addButton" data-target="#note-form">
				<img class="img-responsive" src="/css/assets/location.png">
				</button><br>
			</div>
			<script>
				$('#submitNote').click(function() {
					$('#note-form').hide();
					$('#welcomeText').show();
				});
			</script>
		{{/if}}
		{{/if}}

	</div>
</body>

</html>
