	<!---<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places"></script>--->

	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/myodyssey.css" rel="stylesheet">

</head>

<body>
	<div class="container-fluid">
		<div id="map"></div>

		<div class="topbox row">

			<div class="col" id="welcome">
				{{#if username}}
					<h1>Welcome back, <br>
						<div id="userName">{{username}}</div>
					</h1>
					<p>Tap a marker to view the note.</p>
				{{/if}}
			</div>

			<div id="login">
				{{#unless username}}
					<form id="loginForm" role="form" method="get" action="/">
						<div class="form-group">
							<input name="name" id="name" type="text" class="form-control" placeholder="What's your Name?">
						</div>
						<div class="form-group">
							<input id="loginBtn" type="submit" class="btn btn-default" value="Enter MyOdyssey!">
						</div>
					</form>
				{{/unless}}
			</div>
		</div>

		{{#if username}}
			<div id="note-form" class="topbox">
				<div class="form-group">
					<input id="address" type="textbox" class="form-control" placeholder="Type a location here">
				</div>
				<div class="form-group">
					<input id="note" type="textbox" class="form-control" placeholder="Type a note here">
				</div>
				<input id="submitNote" type="submit" class="btn btn-default" value="Add Note">
			</div>
		{{/if}}
		<!--<img id="settings" src="css/assets/settings.svg"></img>-->
	</div>
</body>

</html>


